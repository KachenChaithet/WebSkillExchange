generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  username  String?
  email     String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sentRequests     FriendRequest[] @relation("SentRequests")
  receivedRequests FriendRequest[] @relation("ReceivedRequests")
  friendships1     Friendship[]    @relation("Friend1")
  friendships2     Friendship[]    @relation("Friend2")
  skillPosts       SkillPost[]
}

model FriendRequest {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  status     String   @default("pending")
  createdAt  DateTime @default(now())

  sender   User @relation("SentRequests", fields: [senderId], references: [clerkId])
  receiver User @relation("ReceivedRequests", fields: [receiverId], references: [clerkId])
}

model Friendship {
  id        String   @id @default(cuid())
  user1Id   String
  user2Id   String
  createdAt DateTime @default(now())

  user1 User @relation("Friend1", fields: [user1Id], references: [clerkId])
  user2 User @relation("Friend2", fields: [user2Id], references: [clerkId])
}

model Message {
  id         String   @id @default(uuid())
  senderId   String
  receiverId String
  text       String
  createdAt  DateTime @default(now())
}

model SkillPost {
  id                String           @id @default(cuid())
  userId            String
  postType          PostType // offer | request
  title             String
  description       String
  tags              String[]
  category          String?
  level             SkillLevel? // เฉพาะ offer → optional
  availability      DateTime?
  desiredCompletion DateTime? // เฉพาะ request → optional
  compensationType  CompensationType
  budget            Int?
  isSkillExchange   Boolean? // ใช้ได้ทั้ง 2 ฝั่ง
  attachments       String[] // photos / files
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  user User @relation(fields: [userId], references: [clerkId])
}

enum PostType {
  offer
  request
}

enum SkillLevel {
  Beginner
  Intermediate
  Expert
}

enum CompensationType {
  budget
  free
  paid
  exchange
}
